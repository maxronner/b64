    "version": "0.2.0",
    "configurations": [
        {
            "name": "Encode",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "args": ["encode", "${input:File}"]
        },
        {
            "name": "Encode to file",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "args": ["encode", "-f", "${input:File}"]
        },
        {
            "name": "Decode",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "args": ["decode", "${input:File}"]
        },
        {
            "name": "Decode to file",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "args": ["decode", "-f", "${input:File}"]
        }
    ],

    "inputs": [
        {
            "id": "File",
            "type": "promptString",
            "default": ".gitignore",
            "description": "file"
        },
    ]
}